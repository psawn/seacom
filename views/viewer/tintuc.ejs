<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Tin tức</title>
    <%- include('headlink')%>
</head>
<body>
<%- include('header')%>    
<section>
    <%- include('slideshow')%>
    <div class="container">
        <div class="row">
            <div class="col-md-12 " style="margin-top:35px;margin-bottom:30px">
                <ul style="list-style: none;padding: 0;" class="center-text">
                    <% nhomtintuc_cap1.map(function(e){ %>
                        <a id=<%- e.idnhomtintuc_cap1%> class="field-news" href="/tintuc/<%- e.idnhomtintuc_cap1%>">
                            <li><%- e.tennhomtintuc_cap1%></li>
                        </a>
                    <% })%>
                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="small-container">
            <div class="news-list">
                <% tintuc.map(function(e){ %>
                    <div class="news-item relative">
                        <div class="news-img">
                            <img style="border-radius: 5px;" src="<%- e.anhdaidien%>">
                        </div>
                        <div class="fs-16px absolute font-weight-bold mt-30px" style="width: 280px;">
                            <%- e.tieude%>
                        </div>
                        <div class="fs-16px absolute b0" style="color: #EB6C10;text-decoration: underline;">
                            <i><a href="/tintuc/<%- e.idnhomtintuc_cap1%>/chitiet/<%- e.idtintuc%>">Xem thêm</a></i>
                        </div>
                    </div>
                <% })%>
            </div>
        </div>
        <%- include('pagination')%>
    </div>
    <%- include('form-contact')%>
</section>        
<%- include('footer')%>
<script type="text/javascript" src="libs/js/userscript.js"></script>  
<script defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCaj0mHlR-keu-9hsR6d-gB0L9BclG04rk&callback=initMap">
</script>
<!--
    Script này mà để trong head sẽ không chạy được alert mà chỉ chạy được sweetalert2
    <script type="text/javascript" src="libs/js/script.js"></script>
-->
</body>
</html>