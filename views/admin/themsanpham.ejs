<!DOCTYPE html>
<html lang="en">
<%- include('head')%>
<body class="sb-nav-fixed">
<%- include('topnav')%>
<div id="layoutSidenav">

    <%- include('admin-aside') %>

    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid">
                <h5 class="mt-4 mb-3">
                    &nbsp; 
                </h5>
                <% if (message!=null) { %>
                    <%- message %>
                <% } %>
                <ol class="breadcrumb mb-4">
                    <li class="breadcrumb-item active">
                        Sản phẩm
                    </li>
                    <li class="breadcrumb-item active">
                        Thêm
                    </li>
                </ol>
                <div class="row">
                    <div class="col-xl-12">
                        <div class="card mb-4">
                            <div class="card-header">
                                <div class="fs-20px">
                                    <i class="fas fa-table mr-1"></i>
                                    <span class="font-weight-bolder text-info">
                                        Thêm sản phẩm
                                    </span>
                                </div>
                            </div>
                            <div class="card-body">
                                <form action="/admin/themsanpham" method="post" autocomplete="off">
                                    <div class="table-responsive">
                                        <table>
                                            <tr>
                                                <td class="font-weight-bolder "><div class="container-fluid">Nhóm sản phẩm</div></td>
                                                <td colspan="2">
                                                    <select name="idnhomsanpham" class="container-fluid">
                                                        <% nhomsanpham.map(function(e) { %>
                                                            <option value="<%- e.idnhomsanpham%>"> 
                                                                <%- e.tennhomsanpham%>
                                                            </option>
                                                        <% })%>
                                                    </select>
                                                </td>
                                                <td class=" font-weight-bolder">
                                                    <div class="container-fluid">
                                                        Mã sản phẩm
                                                    </div>
                                                </td>
                                                <td colspan="2">
                                                    <input type="text" class="container-fluid" name="masanpham">
                                                </td>
                                            </tr>
                                            <tr>
                                                <td width="18%" class="font-weight-bolder"><div class="container-fluid">Is_Active</div></td>
                                                <td width="16%">
                                                    <select class="container-fluid" name="is_active">
                                                        <option value="1">true</option>
                                                        <option value="0">false</option>
                                                    </select>
                                                </td>
                                                <td width="18%" class="font-weight-bolder"><div class="container-fluid">Trạng thái</div></td>
                                                <td>
                                                    <select class="container-fluid" name="trangthai">
                                                        <option value="1">true</option>
                                                        <option value="0">false</option>
                                                    </select>
                                                </td>
                                                <td class="font-weight-bolder"><div class="container-fluid">Giá</div></td>
                                                <td>
                                                    <input id="gia" name="gia" class="container-fluid" required>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="font-weight-bolder"><div class="container-fluid">Tên sản phẩm</div></td>
                                                <td colspan="5">
                                                        <input name="tensanpham" value="" class="container-fluid" required>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="font-weight-bolder"><div class="container-fluid">Phụ kiện</div></td>
                                                <td colspan="5">
                                                    <textarea name="phukien" class="container-fluid" rows="10" required></textarea>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="font-weight-bolder"><div class="container-fluid">Mô tả</div></td>
                                                <td colspan="5">
                                                    <textarea name="mota" class="container-fluid" rows="10" required></textarea>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="font-weight-bolder"><div class="container-fluid">Link ảnh đại diện</div></td>
                                                <td colspan="5">
                                                    <input name="anhdaidien" class="container-fluid">
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="font-weight-bolder"><div class="container-fluid">Link ảnh nội dung</div></td>
                                                <td colspan="5">
                                                    <input name="anhnoidung" class="container-fluid">
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                    <button id="btn_them" type="submit" class="btn btn-primary mt-3" style="width: 20% ;float: right">Thêm</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <%- include('footer.ejs')%>
    </div>
</div>
<%- include('script.ejs')%>
<script>

    $(document).ready(function() {
        $('#dataTable').DataTable( {
            "lengthMenu": [[5, 25, 50, -1], [5, 25, 50, "All"]]
        } )
    });

    $('#btn_them').click(function(){
        var gia = document.getElementById('gia').value;
        if(isNaN(gia)|| gia < 0) {
            alert_gia();
            // không để return false thì form vẫn đc submite lên
            return false;
        } else {
            $('form').submit();
        }
        
    })
</script>
</body>
</html>